<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Theme.Myrecipes">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/scroll"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:layout_marginTop="20dp"

                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints,Suspicious0dp">

                <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgPhoto"
                        android:layout_width="42dp"
                        android:layout_height="171dp"
                        android:layout_gravity="center"

                        app:riv_corner_radius="30dip"
                        android:layout_weight="1"
                        tools:srcCompat="@tools:sample/avatars"
                        app:srcCompat="@android:mipmap/sym_def_app_icon"
                        android:layout_marginLeft="-12dp" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="189dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:textColor="#951509"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="3dp" />

                    <TextView
                            android:id="@+id/textCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                    <TextView
                            android:id="@+id/txtArea"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0"
                            android:text="TextView" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageButton
                                android:id="@+id/imgFav"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"

                                android:src="@drawable/ic_baseline_favorite_border_24"
                                tools:srcCompat="@drawable/ic_baseline_favorite_border_24"
                                android:layout_marginRight="12dp" />

                        <TextView
                                android:id="@+id/Fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_weight="0"
                                android:text="Add to favorities"
                                android:textColor="#951509"
                                android:layout_marginBottom="12dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="20dp">

                <TextView
                        android:id="@+id/txtTitle2"
                        android:layout_width="205dp"
                        android:layout_height="42dp"
                        android:layout_gravity="left"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="Ingredients"
                        android:textColor="#951509"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        app:layout_constraintVertical_bias="0.049" />

                <TextView
                        android:id="@+id/txtTitle3"
                        android:layout_width="205dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="meausures"
                        android:textColor="#951509"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        app:layout_constraintVertical_bias="0.049" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="172dp">

                <TextView
                        android:id="@+id/txtIngredients"
                        android:layout_width="25dp"
                        android:layout_height="165dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"

                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitle2"
                        app:layout_constraintVertical_bias="0.0" />


                <TextView
                        android:id="@+id/txtquantities"
                        android:layout_width="29dp"
                        android:layout_height="165dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitle2"
                        app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <TextView
                    android:id="@+id/txtTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="left"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Instructions"
                    android:textColor="#951509"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.049" />


            <TextView
                    android:id="@+id/txtInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"


                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitle2"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/txtTitle5"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:text="@string/explanatory_video"
                    android:textColor="#951509"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.049" />

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/video_player"
                        android:layout_width="match_parent"
                        app:resize_mode="fill"
                        app:show_buffering="when_playing"
                        app:controller_layout_id="@layout/exo_player_control_view"
                        android:layout_height="match_parent" >


                </com.google.android.exoplayer2.ui.PlayerView>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center|center_horizontal"
            android:foregroundGravity="center_vertical"
            android:visibility="visible"
            tools:visibility="visible" />

</FrameLayout>